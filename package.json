{
  "name": "andys-charts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/d3-path": "^3.0.0",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "clsx": "^1.2.1",
    "d3-path": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "prefer-const": [
        "error"
      ],
      "prefer-destructuring": [
        "error",
        {
          "array": false,
          "object": true
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "eqeqeq": [
        "error",
        "smart"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
